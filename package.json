{
  "name": "hytale-generators",
  "description": "Utilities for generating Hytale server assets (JSON, language entries, textures, derived colors, and recipe definitions) into a `dist/` directory.",
  "version": "0.2.5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dustinheisey/Hytale-Generators.git"
  },
  "keywords": [
    "hytale",
    "hytale-mod",
    "modding",
    "game-modding",
    "asset-pack",
    "asset-generator",
    "json",
    "textures",
    "sharp",
    "build-tools",
    "node",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "license": "MIT",
  "author": "Dustin Heisey",
  "type": "module",
  "scripts": {
    "format": "prettier . --write",
    "lint": "run-s --continue-on-error typecheck lint:js spellcheck",
    "typecheck": "tsc --noEmit",
    "lint:js": "eslint . -c eslint.config.ts --fix",
    "spellcheck": "cspell lint .",
    "clear": "rimraf dist test",
    "build": "tsc -p tsconfig.build.json",
    "build:clear": "npm run clear && npm run build",
    "tooling": "tsc -p tsconfig.tools.json",
    "test": "tsc -p tsconfig.test.json && node test/index.test.js",
    "test:clear": "npm run clear && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@eslint/json": "^1.0.1",
    "@types/culori": "^4.0.1",
    "@types/node": "^25.3.0",
    "commitlint": "^20.4.2",
    "cspell": "^9.7.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "module-alias": "^2.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.1.3",
    "type-fest": "^5.4.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "culori": "^4.0.2",
    "sharp": "^0.34.5"
  }
}
